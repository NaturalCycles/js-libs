//
// @naturalcycles/dev-lib/cfg/tsconfig.scripts.json
//
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "${configDir}/..",
    "baseUrl": "${configDir}",
    "outDir": "${configDir}/../dist/scripts",
    "paths": {
      "@src/*": ["${configDir}/../src/*"]
    },
    "noEmit": true,
    "tsBuildInfoFile": "${configDir}/../node_modules/.cache/scripts.tsbuildinfo"
  },
  "exclude": ["**/__exclude"]
}
