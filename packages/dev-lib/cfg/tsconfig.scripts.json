{
  "extends": "./tsconfig.src.json",
  "compilerOptions": {
    "rootDir": "${configDir}/..",
    "baseUrl": "${configDir}/..",
    "outDir": "${configDir}/../dist/scripts",
    "paths": {
      "@src/*": ["${configDir}/../src/*"]
    },
    "tsBuildInfoFile": "${configDir}/../node_modules/.cache/scripts.tsbuildinfo"
  },
  "include": ["${configDir}"]
}
