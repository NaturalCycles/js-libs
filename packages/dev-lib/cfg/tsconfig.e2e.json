//
// @naturalcycles/dev-lib/cfg/tsconfig.e2e.json
//
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "${configDir}/..",
    "baseUrl": "${configDir}",
    "outDir": "${configDir}/../dist/e2e",
    "paths": {
      "@src/*": ["${configDir}/../src/*"]
    },
    "tsBuildInfoFile": "${configDir}/../node_modules/.cache/e2e.tsbuildinfo",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom", "dom.iterable"]
    // copy-paste the paths below,
    // it's needed, because playwright doesn't support ${configDir} properly
    //    "baseUrl": ".",
    //    "paths": {
    //      "@src/*": ["../src/*"],
    //    },
  },
  "exclude": ["**/__exclude"]
}
