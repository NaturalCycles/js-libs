{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "extends": ["packages/dev-lib/cfg/oxlint.config.json"],
  "ignorePatterns": ["__exclude", "docs"],
  "rules": {
    // "import/extensions": 0, // todo: enable when oxlint bug is fixed
    "import/no-default-export": 0
  },
  "settings": {
    "jsdoc": {
      "tagNamePreference": {
        "experimental": "experimental"
      }
    }
  },
  "overrides": [
    {
      "files": ["packages/js-lib/**"],
      "rules": {
        "typescript/prefer-for-of": 0
      }
    }
  ]
}
